<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <p class="left"><%= profile_img(comment.user, "40x40") if profile_img(comment.user, "40x40") %>
        <%= comment.user.name %>さんがコメントしました。</p>
        <p class="left"><%= comment.content %></p>
        <% if current_user.id == comment.user.id %>
            <%= link_to '編集', '#' %>
            <%= link_to '削除', user_topic_comment_path(current_user, topic, comment), method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
