<%= form_for(@topic, url: choose_new_or_edit) do |f| %>
  <div class="field">
    <%= f.text_field :content, autofocus: true, class: "form-control", placeholder: "内容" %>
  </div>
  <div class="field">
     <%= f.file_field :image %>
  </div>
  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
